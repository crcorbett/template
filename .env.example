# PostgreSQL Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=template
POSTGRES_PORT=5432
POSTGRES_HOST=localhost

# Database URL (for Drizzle/Better Auth)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Better Auth secret (generate with: openssl rand -base64 32)
BETTER_AUTH_SECRET=your-secret-key-here-minimum-32-characters

# Better Auth URL (your app's public URL)
BETTER_AUTH_URL=http://localhost:3000

# Google OAuth (create at: https://console.cloud.google.com/apis/credentials)
# Set callback URL to: http://localhost:3000/api/auth/callback/google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Microsoft OAuth (create at: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps)
# Set callback URL to: http://localhost:3000/api/auth/callback/microsoft
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
